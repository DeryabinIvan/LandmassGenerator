{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/Zc:__cplusplus",
                "/std:c++20",
                "/EHsc",
                "/nologo",
                "/Iinclude",
                "/Fe${workspaceFolder}\\myProgram.exe",
                "${workspaceFolder}\\*.cpp",
                "/link gdi32.lib user32.lib kernel32.lib lib\\glfw3dll.lib lib\\bgfx.lib lib\\bimg.lib lib\\bimg_decode.lib lib\\bx.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}